<main>
    <div class="container">
        <div class="row">
            <div class="col-8">
                <div class="card mt-5">
                    <div class="card-header">
                        <h1>Add new Driver</h1>
                    </div>
                    <div class="card-body">
                        <form action="{{url}}store" method="post">
                            <div class="mb-3">
                                <label class="form-label">Driver Table</label>
                                <input type="text" name="driver_table" class="form-control" 
                                value="{{#if oldData.driver_table}}{{oldData.driver_table}}{{/if}}"
                                placeholder="blue shark">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Truck</label>
                                <select class="form-select" name="truck">
                                    {{#each trucks}}
                                    <option value="{{this.id}}" {{isSelected ../oldData.truck this.id}}>{{this.title}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="mb-5">
                                <label class="form-label">About license</label>
                                <div class="form-check">
                                    <input class="form-check-input" name="license" type="checkbox" value="1"
                                        {{#if oldData.license}}checked{{/if}}
                                        id="driverLicense">
                                    <label class="form-check-label" for="driverLicense">
                                        has License?
                                    </label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-outline-primary">Add Driver</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>